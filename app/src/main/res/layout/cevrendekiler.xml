<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swiperefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#efe7de"
            android:dividerHeight="5dp"
            android:drawSelectorOnTop="true" />
    </android.support.v4.widget.SwipeRefreshLayout>
    <ImageView
        android:id="@+id/kisiyokkonusmalar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="@mipmap/uzgunuz" />
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/quickReturnBottomTarget"
        android:gravity="center"
        android:layout_gravity="right|bottom"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/contentdesc"
            android:id="@+id/button22"
            android:src="@mipmap/cevremdekiler_iki"
            android:background="@mipmap/cevremdekiler"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="false"
            android:layout_alignParentLeft="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/contentdesc"
            android:id="@+id/button24"
            android:src="@mipmap/konusmalarim"
            android:background="@mipmap/konusmalarim"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="true"
            android:layout_marginTop="44dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/contentdesc"
            android:id="@+id/button23"
            android:src="@mipmap/ana_bomba"
            android:background="#00000000"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="154dp" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/pbLoading"
        android:visibility="invisible"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center" />

</FrameLayout>