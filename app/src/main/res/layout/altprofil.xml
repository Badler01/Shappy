<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#188d93">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout4" >

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@mipmap/bos_kapak"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="#00000000">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView13"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="#00000000" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton9"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/kaltprofil_cikis"
                    android:background="#00000000"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abdurrahman , 24"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="40dp"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/armor_turk_iki"
            android:layout_marginTop="140dp" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            android:maxHeight="200dp"
            android:minHeight="200dp"
            android:minWidth="200dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="0.5dp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profil_bilgileri"
        android:orientation="vertical"
        android:layout_below="@+id/frameLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView23"
                android:src="@mipmap/isim_alt" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abdurrahman , 24"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#767676"
                android:textSize="18dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp" />
        </FrameLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:id="@+id/imageView36"
            android:background="#cacaca" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:id="@+id/imageView37"
            android:background="#cacaca" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView30"
                android:src="@mipmap/egitim_yeri" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Middle East Technical University"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#767676"
                android:textSize="18dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp" />
        </FrameLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:id="@+id/imageView38"
            android:background="#cacaca" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView34"
                android:src="@mipmap/cinsiyet_iki" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Erkek"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#767676"
                android:textSize="18dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView28"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:src="@mipmap/tleo" />
        </FrameLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:id="@+id/imageView39"
            android:background="#cacaca" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView35"
                android:src="@mipmap/aciklama_alt" />

            <TextView
                android:id="@+id/editText10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="kendinizi anlatan bir yazı yazın"
                android:textColor="#767676"
                android:textSize="14dp"
                android:maxLength="90"
                android:layout_gravity="left|top"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="30dp"
                android:background="#00000000" />

        </FrameLayout>

    </LinearLayout>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>